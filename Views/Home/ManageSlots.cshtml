
@{
    ViewData["Title"] = "Manage Slots";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4 text-center">Manage Slots</h1>

            <!-- Row of buttons for the four places -->
            <div class="row text-center mb-4">
                <!-- Place 1 -->
                <div class="col-lg-3 col-md-6 mb-3">
                    <h4>Steve_Campus</h4>
                    <a asp-controller="SteveNewSlots" asp-action="Index" class="btn btn-primary mb-2 btn-block">View Slots</a>
                    <a asp-action="Create" asp-controller="SteveNewSlots" class="btn btn-success mb-2 btn-block">Create Slot</a>
                </div>

                <!-- Place 2 -->
                <div class="col-lg-3 col-md-6 mb-3">
                    <h4>Ritson_Campus</h4>
                    <a asp-action="Index" asp-controller="RitsonNewSlots" class="btn btn-primary mb-2 btn-block">View Slots</a>
                    <a asp-action="Create" asp-controller="RitsonNewSlots" class="btn btn-success mb-2 btn-block">Create Slot</a>
                </div>

                <!-- Place 3 -->
                <div class="col-lg-3 col-md-6 mb-3">
                    <h4>ML_Campus</h4>
                    <a asp-action="Index" asp-controller="NewSlots" class="btn btn-primary mb-2 btn-block">View Slots</a>
                    <a asp-action="Create" asp-controller="NewSlots" class="btn btn-success mb-2 btn-block">Create Slot</a>
                </div>

                <!-- Place 4 -->
                <div class="col-lg-3 col-md-6 mb-3">
                    <h4>City_Campus</h4>
                    <a asp-action="Index" asp-controller="CityNewSlots" class="btn btn-primary mb-2 btn-block">View Slots</a>
                    <a asp-action="Create" asp-controller="CityNewSlots" class="btn btn-success mb-2 btn-block">Create Slot</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Optional CSS -->
<style>
    .btn-block {
        width: 100%;
    }

    .row.text-center h4 {
        margin-bottom: 15px;
        font-weight: bold;
    }
</style>
