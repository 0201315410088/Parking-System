@{
    ViewData["Title"] = "Contact";
}



<!-- Contact Section -->
<div class="contact-section">
    <div class="container">
        <h1>Contact Us</h1>
        <p>We'd love to hear from you! Whether you have a question about our services or need assistance, our team is ready to answer all your questions.</p>

        <h2>Contact Information</h2>
        <p>
            <strong>Email:</strong> support@parkingmanagementsystem.com<br>
            <strong>Phone:</strong> +1 (555) 123-4567<br>
            <strong>Address:</strong> 123 Parking Lane, Suite 100, Cityville, ST 12345, USA
        </p>

        <h2>Contact Form</h2>
        <form action="@Url.Action("Send", "Contact")" method="post">
            <input type="text" name="Name" placeholder="Your Name" required />
            <input type="email" name="Email" placeholder="Your Email" required />
            <textarea name="Message" placeholder="Your Message" required></textarea>
            <button type="submit">Send Message</button>
        </form>

        <h2>Follow Us</h2>
        <ul class="social-media">
            <li><a href="#">Facebook</a></li>
            <li><a href="#">Twitter</a></li>
            <li><a href="#">Instagram</a></li>
            <li><a href="#">LinkedIn</a></li>
        </ul>
    </div>
</div>

<!-- Enhanced CSS for Contact Page -->
<style>
    .contact-section {
        padding: 50px 0;
        background-color: #f8f9fa;
        text-align: center;
    }

        .contact-section h1 {
            font-size: 36px;
            color: #343a40;
            margin-bottom: 20px;
        }

        .contact-section p {
            font-size: 18px;
            color: #6c757d;
            margin-bottom: 30px;
        }

        .contact-section h2 {
            font-size: 28px;
            color: #343a40;
            margin-bottom: 15px;
        }

        .contact-section form {
            max-width: 600px;
            margin: 0 auto;
            text-align: left;
        }

            .contact-section form input,
            .contact-section form textarea {
                width: 100%;
                padding: 15px;
                margin-bottom: 15px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .contact-section form button {
                background-color: #007bff;
                color: white;
                padding: 10px 20px;
                border-radius: 5px;
                font-size: 18px;
                border: none;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .contact-section form button:hover {
                    background-color: #0056b3;
                }

    .social-media {
        list-style-type: none;
        padding: 0;
        margin: 20px 0;
    }

        .social-media li {
            display: inline;
            margin: 0 10px;
        }

            .social-media li a {
                color: #007bff;
                text-decoration: none;
                font-size: 18px;
                transition: color 0.3s ease;
            }

                .social-media li a:hover {
                    color: #0056b3;
                }
</style>
