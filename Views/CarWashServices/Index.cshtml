@model testsubject.CarWashService

@{
    ViewData["Title"] = "Car Wash Services Index";
    Layout = "_Layout";
}

<style>
    .registration-form {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        margin-bottom: 20px;
    }

    .section-title {
        margin-top: 20px;
        color: #007bff;
        border-bottom: 2px solid #007bff;
        padding-bottom: 10px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
    }

    .status {
        font-weight: bold;
        color: #28a745; /* Green color for positive status */
    }

    .btn {
        margin: 5px;
    }
</style>

<div class="registration-form">
    <h1>Car Wash Service Registration</h1>

    <div class="form-group">
        <label>Registration Acceptance Status:</label>
        <span class="status">@ViewBag.RegAcceptStatus</span>
    </div>

    @if (Model != null)
    {
        <h3 class="section-title">Service Details</h3>
        <div class="form-group">
            <label>First Name:</label>
            <input type="text" class="form-control" value="@Model.FirstName" readonly />

            <label>Last Name:</label>
            <input type="text" class="form-control" value="@Model.LastName" readonly />

            <label>Username:</label>
            <input type="text" class="form-control" value="@Model.Username" readonly />

            <label>Service Name:</label>
            <input type="text" class="form-control" value="@Model.ServiceName" readonly />

            <label>Description:</label>
            <textarea class="form-control" readonly>@Model.Description</textarea>
        </div>

        <h3 class="section-title">Personal Information</h3>
        <div class="form-group">
            <label>Email:</label>
            <input type="email" class="form-control" value="@Model.StudentEmail" readonly />

            <label>Phone Number:</label>
            <input type="text" class="form-control" value="@Model.PhoneNumber" readonly />

            <label>Address:</label>
            <input type="text" class="form-control" value="@Model.Address" readonly />

            <label>City:</label>
            <input type="text" class="form-control" value="@Model.City" readonly />

            <label>State:</label>
            <input type="text" class="form-control" value="@Model.State" readonly />

            <label>Postal Code:</label>
            <input type="text" class="form-control" value="@Model.PostalCode" readonly />

            <label>Country:</label>
            <input type="text" class="form-control" value="@Model.Country" readonly />

            <label>Date of Birth:</label>
            <input type="text" class="form-control" value="@Model.DateOfBirth?.ToString("yyyy-MM-dd")" readonly />
        </div>

        <h3 class="section-title">Submission Details</h3>
        <div class="form-group">
            <label>Submission Date:</label>
            <input type="text" class="form-control" value="@Model.SubmissionDate?.ToString("yyyy-MM-dd")" readonly />
            <label>Status:</label>
            <input type="text" class="form-control" value="@Model.Status" readonly />
        </div>

        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        </div>
    }
    else
    {
        <div class="form-group">
            <p>No car wash services found for your account.</p>
        </div>
    }

    <div class="form-group">
        <a asp-action="Create" class="btn btn-primary">Register New Service</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
