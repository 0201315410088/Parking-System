@{
    ViewData["Title"] = "Transfer Success";
    Layout = "_Layout";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Transfer successful page.">
    <meta name="robots" content="noindex, nofollow">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <style>
        .success-icon {
            color: #28a745;
            font-size: 4rem;
        }

        body {
            background-color: #f9f9f9;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="text-center mt-5">
            <i class="fas fa-check-circle success-icon"></i>
            <h1 class="display-4">Transfer Successful!</h1>
            <p class="lead">Thank you for your transfer. Your credits have been successfully transferred.</p>
            <p class="lead">You will be redirected to your profile shortly.</p>
        </div>
    </div>

    <script>
        // Redirect to the profile page after a short delay to show the success message
        setTimeout(function () {
            window.location.href = '@Url.Action("ViewProfile", "Profile")';
        }, 3000); // 3 seconds delay
    </script>

    <!-- JavaScript includes -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
