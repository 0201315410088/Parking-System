@{
    ViewData["Title"] = "My Bookings";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <title>Upload Profile Picture</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .upload-container {
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            background-color: #f9f9f9;
        }

        .preview {
            margin-top: 20px;
            text-align: center;
        }

            .preview img {
                width: 150px;
                height: 150px;
                border-radius: 50%;
                object-fit: cover;
                background-color: #e0e0e0;
            }
    </style>
    <script>
        function previewImage(event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('imagePreview');
                output.src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
</head>
<body>
    <div class="upload-container">
        <h2 class="text-center">Upload Profile Picture</h2>
        <form asp-controller="Image" asp-action="Upload" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="file">Choose file</label>
                <input type="file" name="file" class="form-control" onchange="previewImage(event)" />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Upload</button>
        </form>
        <div class="preview">
            <h3>Image Preview</h3>
            <img id="imagePreview" src="data:image/gif;base64,R0lGODlhAQABAIAAAAUEBA==" alt="Your Image" />
        </div>
    </div>
</body>
</html>
