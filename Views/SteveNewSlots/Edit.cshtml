@model SteveNewSlot

@{
    ViewData["Title"] = "Edit Slot";
    Layout = "_Layout";
}

<h1>Edit Slot</h1>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SlotId" />

            <div class="form-group">
                <label asp-for="IsTaken" class="form-check-label">
                    <input class="form-check-input" asp-for="IsTaken" /> @Html.DisplayNameFor(model => model.IsTaken)
                </label>
            </div>

            <div class="form-group">
                <label asp-for="Color" class="control-label">Color</label>
                <input type="text" asp-for="Color" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="Bookings" class="control-label">Bookings</label>
                <ul class="list-group">
                    @if (Model.Bookings != null && Model.Bookings.Any())
                    {
                        foreach (var booking in Model.Bookings)
                        {
                            <li class="list-group-item">
                                From: @booking.BookingTime.ToString("yyyy-MM-dd HH:mm")
                                To: @booking.EndTime.ToString("yyyy-MM-dd HH:mm")
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item">No bookings available for this slot.</li>
                    }
                </ul>
            </div>

            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
    .form-group {
        margin-bottom: 15px;
    }

    .list-group-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>
