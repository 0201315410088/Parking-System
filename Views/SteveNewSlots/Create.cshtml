@model SteveNewSlot

@{
    ViewData["Title"] = "Create New Slots";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mb-4">@ViewData["Title"]</h1>
            <hr />

            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-4">New Slot Details</h4>

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Number of Slots Input -->
                        <div class="form-group">
                            <label for="numberOfSlots">Number of Slots to Create</label>
                            <input type="number" id="numberOfSlots" name="numberOfSlots" min="1" max="10" value="1" class="form-control" required />
                        </div>

                        <div id="slotDetailsContainer"></div>

                        <!-- Submit Button -->
                        <div class="form-group text-right">
                            <input type="submit" value="Create Slots" class="btn btn-primary px-4" />
                        </div>
                    </form>
                </div>
            </div>

            <!-- Back to List Link -->
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

<!-- Optional custom styles to improve form spacing and responsiveness -->
<style>
    .form-group {
        margin-bottom: 1.5rem;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .card {
        border-radius: 0.5rem;
        border: none;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
    }
</style>

<!-- Script to dynamically add slots -->
<script>
    document.getElementById('numberOfSlots').addEventListener('input', function () {
        const container = document.getElementById('slotDetailsContainer');
        const numberOfSlots = this.value;

        // Clear the container
        container.innerHTML = '';

        // Create slot details dynamically based on the number of slots
        for (let i = 0; i < numberOfSlots; i++) {
            const slotDiv = document.createElement('div');
            slotDiv.classList.add('form-group');
            slotDiv.innerHTML = `
                    <label>Slot ${i + 1} Details</label>
                    <p>This slot will be created and is initially set to not taken.</p>
                `;
            container.appendChild(slotDiv);
        }
    });
</script>
